<Window x:Class="HizkitzaClient.ui.window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HizkitzaClient.ui.window"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Black"
        ResizeMode="NoResize"
        Title="Hizkitza" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock x:Name="Username" Text="username" VerticalAlignment="Center" Style="{StaticResource Text.Basic}"/>
            <Button Click="Itxi_Click" Content="Itxi" Margin="20,0,0,0" Style="{StaticResource Button.Negative}"/>
        </StackPanel>
        
        <Frame x:Name="MainFrame"
                Grid.Row="1"
                NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
