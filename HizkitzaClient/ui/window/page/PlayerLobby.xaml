<Page x:Class="HizkitzaClient.ui.window.page.PlayerLobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HizkitzaClient.ui.window.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerLobby">

    <Grid Margin="50,30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel Margin="10">
            <TextBlock Text="Partidak:" DockPanel.Dock="Top" Style="{StaticResource Text.Basic}"/>
            <Button Content="Partidan sartu" DockPanel.Dock="Bottom"/>
            <ListBox BorderThickness="0" Margin="0,10"/>
        </DockPanel>

        <DockPanel Margin="10" Grid.Column="1">
            <TextBlock Text="* Jokalari edizioa:" DockPanel.Dock="Top" Style="{StaticResource Text.Basic}"/>
            <Border Margin="0,10,0,0">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="Itxura:" Margin="10" DockPanel.Dock="Left" MaxWidth="90" Style="{StaticResource Text.Basic}"/>
                        <ComboBox Margin="10"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Kolorea:" Margin="10" DockPanel.Dock="Left" MaxWidth="90" Style="{StaticResource Text.Basic}"/>
                        <ComboBox Margin="10"/>
                    </DockPanel>
                </StackPanel>
            </Border>
        </DockPanel>

        <DockPanel Margin="10" Grid.Column="2">
            <TextBlock Text="* Partida edizioa:" DockPanel.Dock="Top" Style="{StaticResource Text.Basic}"/>
            <Button Content="Partida berria" DockPanel.Dock="Bottom"/>
            <Border Margin="0,10">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="Mapa:" Margin="10" DockPanel.Dock="Left" MaxWidth="90" Style="{StaticResource Text.Basic}"/>
                        <ComboBox Margin="10"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Jokalari kopurua:" Margin="10" DockPanel.Dock="Left" MaxWidth="90" Style="{StaticResource Text.Basic}"/>
                        <ComboBox Margin="10"/>
                    </DockPanel>
                </StackPanel>
            </Border>
        </DockPanel>

    </Grid>
</Page>
