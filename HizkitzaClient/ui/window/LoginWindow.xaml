<Window x:Class="HizkitzaClient.ui.window.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HizkitzaClient.ui.window"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Black"
        Title="Saio hasi" Height="400" Width="400">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="SAIOA HASI" TextAlignment="Center" Style="{StaticResource Text.Title}"/>

        <TextBlock Text="Zerbitzari IP" Width="200" Margin="0,20,0,0" Style="{StaticResource Text.Basic}"/>
        <TextBox x:Name="serverip" Width="200" KeyDown="SaioaHasi_KeyDown" Text="127.0.0.1"/>

        <TextBlock Text="Erabiltzailea" Width="200" Margin="0,10,0,0" Style="{StaticResource Text.Basic}"/>
        <TextBox x:Name="user" Width="200" KeyDown="SaioaHasi_KeyDown" Text="user"/>

        <TextBlock Text="Pasahitza" Width="200" Margin="0,10,0,0" Style="{StaticResource Text.Basic}"/>
        <PasswordBox x:Name="pass" Width="200" KeyDown="SaioaHasi_KeyDown"/>

        <StackPanel Orientation="Horizontal" Margin="0,25,0,0" HorizontalAlignment="Center">
            <Button Click="SaioaHasi" Content="Saioa hasi" Margin="0,0,10,0"/>
            <Button Click="SaioBerria" Content="* Saio berria"/>
        </StackPanel>
        <Button Click="Exit" Content="Irten" Margin="0,10,0,0" Style="{StaticResource Button.Negative}"/>
        
        <TextBlock x:Name="message" Margin="0,5,0,0" TextAlignment="Center" Style="{StaticResource Text.Negative}"/>
    </StackPanel>
    
</Window>
